@{
    ViewBag.Title = "Transfer Balance";
}
<div class="row">
    <div class="col-md-6 mt-xl-5">
        <form class="form-group" action="Contact" method="post">
            <div class="form-group">
                <input type="text" name="source" placeholder="Source Account" class="form-control" />
            </div>
            <div class="form-group">
                <input type="text" name="dest" placeholder="Destination Account" class="form-control" />
            </div>
            <div class="form-group">
                <input type="number" name="amount" placeholder="Amount" class="form-control" />
            </div>
            <input type="submit" value="Submit" class="btn btn-success" />
        </form>
    </div>
</div>
